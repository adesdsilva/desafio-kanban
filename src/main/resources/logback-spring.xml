<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true">

    <!-- Inclui timestamp no log -->
    <timestamp key="bySecond" datePattern="yyyy-MM-dd'T'HH:mm:ss.SSS"/>

    <!-- Console Appender em JSON -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="net.logstash.logback.encoder.LogstashEncoder">
            <customFields>{"service":"kanban-project"}</customFields>
            <includeMdcKeyName>userId</includeMdcKeyName>
            <timeZone>UTC</timeZone>
        </encoder>
    </appender>

    <!-- Appender para arquivo (opcional) -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/kanban-project.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/kanban-project.%d{yyyy-MM-dd}.log.gz</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder class="net.logstash.logback.encoder.LogstashEncoder">
            <customFields>{"service":"kanban-project"}</customFields>
            <includeMdcKeyName>userId</includeMdcKeyName>
            <timeZone>UTC</timeZone>
        </encoder>
    </appender>

    <!-- Raiz dos logs -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
    </root>

    <!-- Logs de debug especÃ­ficos -->
    <logger name="org.springframework" level="INFO"/>
    <logger name="org.hibernate.SQL" level="DEBUG"/>
    <logger name="org.hibernate.type.descriptor.sql.BasicBinder" level="TRACE"/>

</configuration>
